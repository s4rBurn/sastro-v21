---
import BaseLayout from '../layouts/BaseLayout.astro';
import ReactCounter from '../components/ReactCounter.jsx';
import BirdFetchComponent from '../components/experiments/BirdFetchComponent.jsx';
import Regions from '../bird/Regions.jsx';
import Notable from '../bird/Notable.jsx';
import { Accordion, AccordionItem } from 'accessible-astro-components'
import { Markdown } from 'astro/components';
---
<BaseLayout title="sBird">
  <style lang="scss" global>
  
  .regions {
    background: #eef9ed;
    overflow-x: hidden;
    overflow-y: auto;
    padding-left: 0.5em;
  }
  .panel__inner {
    background: lightgreen;
    overflow-x: hidden;
    overflow-y: scroll; 
    height: 60vh;
  }

  .panel__inner::-webkit-scrollbar {
    width: 8px;
}
 .panel__inner::-webkit-scrollbar-thumb {
    background: #909090;
    border-radius: 8px;
}
panel__inner::-webkit-scrollbar-track {
    background: #FFFFFF;
}
   button {
        height: 3em;
    }

    input {
        height: 3em;
    }
    button.accordion__header {
      height: auto;
  }

  </style>
  <main>

<Notable client:load />

<Accordion>

  <AccordionItem header="Find the code for your eBird region">
     <Regions client:load />
  </AccordionItem>

  <AccordionItem header="See all birds recently observed in your area">
    <BirdFetchComponent client:load />
  </AccordionItem>


</Accordion>

  </main>

</BaseLayout>